<!DOCTYPE html>
<html lang="es">
      <!--header-->
  <%- include('partials/head') %> 

  <body>

         <!--header-->
     <%- include('partials/header') %>

     <!--SECCION MAS VENDIDOS-->
    <section class="banner">
      <img src="images/baner-equim.jpg " width="100%" height="100%" alt=" " />
    </section>

    <!--SECCION MAS VENDIDOS-->
    <section class="container py-5">
      <div class="row productos">
        <div class="col-12">
          <h2>
            Productos Destacados
          </h2>
        </div>
        <% productos.forEach(producto =>{ %> 
        <div class="col-12 col-md-6 col-lg-3">
          <div class="contenido">
            <img
              src="images/<%= producto.imagen %>  "
              width="80%"
              height="80%"
              alt=""
            />
            <article>
              <h3> <%= producto.price %> </h3>
              <p> <%= producto.name %> </p>
              <a href=""
                ><i
                  class="fa fa-shopping-cart"
                  style="color: #00afef;"
                  aria-hidden="true"
                ></i>
              </a>
            </article>
          </div>
        </div>
        
      <% }) %> 
        
      </div>
    </section>
    <!--SECCION OFERTAS-->
    <section class="container py-5">
      <div class="row productos">
        <div class="col-12">
          <h2>
            Productos Mas Vendidos
          </h2>
        </div>
        <% productos.forEach(producto =>{ %> 
          <div class="col-12 col-md-6 col-lg-3">
            <div class="contenido">
              <img
                src="images/<%= producto.imagen %>  "
                width="80%"
                height="80%"
                alt=""
              />
              <article>
                <h3> <%= producto.price %> </h3>
                <p> <%= producto.name %> </p>
                <a href=""
                  ><i
                    class="fa fa-shopping-cart"
                    style="color: #00afef;"
                    aria-hidden="true"
                  ></i>
                </a>
              </article>
            </div>
          </div>
          
        <% }) %> 
           
        
        
      </div>
    </section>

       <!----Footer-->
    <%- include('partials/footer') %>

  </body>
</html>
